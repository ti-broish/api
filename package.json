{
  "name": "@ti-broish/api",
  "description": "Ti Broish API built with Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "postbuild": "cp -r src/seeds/parl-2021-04-04 dist/seeds/",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:dev:db": "./scripts/start-dev-db.sh",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "deploy:demo": "pm2 deploy demo-ecosystem.config.js production update",
    "lint": "eslint \"{src,scripts,test,@types}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "migration:create": "typeorm migration:create",
    "migration:generate": "typeorm migration:generate",
    "migration:run": "typeorm migration:run",
    "migration:revert": "typeorm migration:revert",
    "seed:create": "typeorm --connection seed migration:create",
    "seed:run": "typeorm --connection seed migration:run",
    "seed:revert": "typeorm --connection seed migration:revert",
    "firebase:token": "node ./scripts/get-token.js"
  },
  "dependencies": {
    "@anchan828/typeorm-decorators": "^0.4.25",
    "@casl/ability": "^5.2.2",
    "@nestjs/cli": "^7.6.0",
    "@nestjs/common": "^7.6.15",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.15",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.6.15",
    "@nestjs/schedule": "^0.4.3",
    "@nestjs/swagger": "^4.8.0",
    "@nestjs/typeorm": "^7.1.5",
    "@sindresorhus/slugify": "^1.1.0",
    "@types/joi": "^14.3.4",
    "base64-img": "1.0.1",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "csv-parse": "^4.15.3",
    "dateformat": "^4.5.1",
    "firebase": "^8.3.3",
    "firebase-admin": "^9.6.0",
    "install": "^0.13.0",
    "joi": "^17.4.0",
    "lodash": "^4.17.21",
    "lodash.merge": "^4.6.2",
    "mime-types": "^2.1.30",
    "nestjs-i18n": "^8.0.11",
    "nestjs-minio": "^2.1.7",
    "nestjs-typeorm-paginate": "^2.3.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.7",
    "stream-transform": "^2.1.0",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.32",
    "typeorm-naming-strategies": "^2.0.0",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@nestjs/schematics": "^7.3.1",
    "@nestjs/testing": "^7.6.15",
    "@types/cron": "^1.7.2",
    "@types/csv-parse": "^1.2.2",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/lodash": "^4.14.168",
    "@types/mime-types": "^2.1.0",
    "@types/minio": "^7.0.7",
    "@types/node": "^14.14.37",
    "@types/passport-jwt": "^3.0.5",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.3.1",
    "firebase-idtoken-getter": "^1.0.3",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jsonlines": "^0.1.1",
    "lint-staged": "^10.5.4",
    "prettier": "2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.1.0",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown",
      "git add"
    ]
  },
  "main": "dist/main.js",
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ti-broish/api.git"
  },
  "keywords": [],
  "author": "",
  "bugs": {
    "url": "https://github.com/ti-broish/api/issues"
  },
  "homepage": "https://tibroish.bg"
}
