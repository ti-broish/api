{
  "name": "@ti-broish/api",
  "engines": {
    "node": ">= 15.0.0",
    "npm": ">= 7.9.0"
  },
  "engineStrict": true,
  "description": "Ti Broish API built with Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "postbuild": "cp -r src/seeds/parl-* dist/seeds/",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "prestart:dev": "mkdir -p dist/seeds && cp -r src/seeds/parl-* dist/seeds/",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "deploy:demo": "pm2 deploy demo-ecosystem.config.js production update",
    "lint": "eslint \"{src,scripts,test,@types}/**/*.ts\" --fix",
    "lint:ci": "eslint \"{src,scripts,test,@types}/**/*.ts\"",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "migration:create": "typeorm migration:create",
    "migration:generate": "typeorm migration:generate",
    "migration:run": "typeorm migration:run",
    "migration:revert": "typeorm migration:revert",
    "seed:create": "typeorm --connection seed migration:create",
    "seed:run": "typeorm --connection seed migration:run",
    "seed:revert": "typeorm --connection seed migration:revert",
    "firebase:token": "node ./scripts/get-token.js"
  },
  "dependencies": {
    "@anchan828/typeorm-decorators": "^1.0.19",
    "@casl/ability": "^5.4.4",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/common": "^9.0.5",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.5",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.0.5",
    "@nestjs/schedule": "^2.1.0",
    "@nestjs/swagger": "^6.0.4",
    "@nestjs/typeorm": "^9.0.0",
    "@sindresorhus/slugify": "^2.1.0",
    "base64-img": "1.0.1",
    "body-parser": "^1.20.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "csv-parse": "^5.3.0",
    "dateformat": "^5.0.3",
    "firebase": "^9.9.1",
    "firebase-admin": "^11.0.0",
    "install": "^0.13.0",
    "joi": "^17.6.0",
    "lodash": "^4.17.21",
    "lodash.merge": "^4.6.2",
    "mime-types": "^2.1.35",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.34",
    "nestjs-command": "^3.1.2",
    "nestjs-i18n": "^9.1.5",
    "nestjs-minio": "^2.1.17",
    "nestjs-typeorm-paginate": "git+https://github.com/jely2002/nestjs-typeorm-paginate.git",
    "passport": "^0.6.0",
    "passport-http": "^0.3.0",
    "passport-jwt": "^4.0.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.6",
    "stream-transform": "^3.2.0",
    "swagger-ui-express": "^4.5.0",
    "typeorm": "^0.3.7",
    "typeorm-naming-strategies": "^4.1.0",
    "ulid": "^2.3.0",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@nestjs/schematics": "^9.0.1",
    "@nestjs/testing": "^9.0.5",
    "@types/cron": "^2.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.6",
    "@types/lodash": "^4.14.182",
    "@types/mime-types": "^2.1.1",
    "@types/minio": "^7.0.13",
    "@types/node": "^18.6.0",
    "@types/passport-http": "^0.3.9",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "dotenv": "^16.0.1",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "firebase-idtoken-getter": "^1.0.3",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jsonlines": "^0.1.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.7",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.[tj]s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.[tj]s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "main": "dist/main.js",
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ti-broish/api.git"
  },
  "keywords": [],
  "author": "",
  "bugs": {
    "url": "https://github.com/ti-broish/api/issues"
  },
  "homepage": "https://tibroish.bg"
}
